<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="movie"
            type="ipren.watchr.dataHolders.Movie" />
        <variable
            name="listener"
            type="ipren.watchr.activities.fragments.listeners.MovieClickListener" />
    </data>

    <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardElevation="6dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/movieLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="@{listener::onMovieClicked}"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/movieId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@{String.valueOf(movie.id)}"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/movieImage"
                android:layout_width="106dp"
                android:layout_height="159dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:imageUrl="@{`https://image.tmdb.org/t/p//w92` + movie.posterPath}"/>

            <TextView
                android:id="@+id/movieTitle"
                style="@style/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:maxLength="30"
                android:text="@{movie.title}"
                app:layout_constraintStart_toEndOf="@+id/movieImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/movieOverview"
                style="@style/Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="@{movie.overview}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/movieImage"
                app:layout_constraintTop_toBottomOf="@+id/movieTitle" />

            <View
                android:id="@+id/bottomContainer"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:background="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/movieImage" />

            <ImageButton
                android:id="@+id/watchedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/bottomContainer"
                android:onClick="@{listener::onWatchedClicked}"
                app:srcCompat="@drawable/ic_watched" />

            <ImageButton
                android:id="@+id/addButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/watchedButton"
                app:layout_constraintTop_toTopOf="@+id/bottomContainer"
                android:onClick="@{listener::onWatchLaterClicked}"
                app:srcCompat="@drawable/ic_watch_later" />

            <ImageButton
                android:id="@+id/favoriteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/ic_favorites"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/addButton"
                app:layout_constraintTop_toTopOf="@+id/bottomContainer"
                android:onClick="@{listener::onFavoriteClicked}"
                app:srcCompat="@drawable/ic_favorites" />

            <TextView
                android:id="@+id/movieRating"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Rating: 8.0"
                app:layout_constraintBottom_toTopOf="@+id/movieGenres"
                app:layout_constraintStart_toEndOf="@+id/movieImage" />

            <TextView
                android:id="@+id/movieGenres"
                style="@style/Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:text="Genres: Horror"
                app:layout_constraintBottom_toTopOf="@+id/bottomContainer"
                app:layout_constraintStart_toEndOf="@+id/movieImage" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>