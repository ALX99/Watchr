<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/new_usr_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_password"
        android:ems="10"
        android:hint="@string/example_password"
        android:inputType="textPassword"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/new_user_email_input"
        app:layout_constraintEnd_toStartOf="@+id/register_user_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/new_user_email_input"
        app:layout_constraintTop_toBottomOf="@+id/new_user_email_input" />

    <EditText
        android:id="@+id/new_user_retyped_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:drawableStart="@drawable/ic_password"
        android:ems="10"
        android:hint="@string/example_password"
        android:inputType="textPassword"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/new_user_email_input"
        app:layout_constraintEnd_toStartOf="@+id/register_user_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/new_user_email_input"
        app:layout_constraintTop_toBottomOf="@+id/new_user_email_input" />

    <EditText
        android:id="@+id/new_user_email_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_email"
        android:ems="10"
        android:hint="@string/example_email"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/register_user_btn"
        android:layout_width="259dp"
        android:layout_height="44dp"
        android:layout_marginTop="51dp"
        android:background="@drawable/rounded_corners_green_selector"
        android:elevation="4dp"
        android:text="@string/register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_usr_pwd" />

    <ProgressBar
        android:id="@+id/register_user_spinner"
        style="?android:attr/progressBarStyle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="visible"
        android:indeterminateTint="#753A88"
        app:layout_constraintBottom_toBottomOf="@+id/register_user_btn"
        app:layout_constraintEnd_toEndOf="@+id/register_user_btn"
        app:layout_constraintStart_toStartOf="@+id/register_user_btn"
        app:layout_constraintTop_toTopOf="@+id/register_user_btn" />

    <ImageView
        android:id="@+id/register_go_to_login_btn"
        android:layout_width="69dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_user_spinner"
        app:srcCompat="@drawable/ic_navigate_before_black_24dp" />


</androidx.constraintlayout.widget.ConstraintLayout>